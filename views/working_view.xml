<?xml version="1.0" encoding="UTF-8" ?>
<odoo>1
    <record id="working_form_view" model="ir.ui.view">
        <field name="name">working.form.view</field>
        <field name="model">working</field>
        <field name="arch" type="xml">
            <form string="Working">
                <header>
                    <field name="state_working" widget="statusbar" statusbar_visible="draft,confirmed,assigned,done"/>
                    <button name="action_cancel" string="Cancel" type="object"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="partner_id"/>
<!--                            <field name="parent_name"/>-->
                            <field name="partner_address"/>
                            <field name="partner_phone"/>
                        </group>
                        <group>
                            <field name="assign"/>
                            <field name="start_time"/>
                            <field name="end_time"/>
                            <field name="origin"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Detailed Work">
                        </page>
                        <page string="Note" name="note">
                            <field name="note" string="Note"/>
                        </page>
                    </notebook>
                </sheet>
                 <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>


    <record id="working_tree_view" model="ir.ui.view">
        <field name="name">working.tree.view</field>
        <field name="model">working</field>
        <field name="arch" type="xml">
            <tree string="Working list">
                <field name="name"/>
                <field name="origin"/>
                <field name="start_time"/>
                <field name="partner_id"/>
<!--                <field name="parent_name"/>-->
                <field name="assign"/>
                <field name="state_working"/>
                <field name="completed_work" invisible="1"/>
                <button name="action_completed" string="Incomplete" type="object"/>
            </tree>
        </field>
    </record>

    <record id="working_action" model="ir.actions.act_window">
        <field name="name">Working</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">working</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new working
            </p>
        </field>
    </record>

    <menuitem id="all_working"
                  name="Working"
                  parent="stock.menu_stock_warehouse_mgmt"
                  action="working_action"/>

<!--    <menuitem id="all_working"-->
